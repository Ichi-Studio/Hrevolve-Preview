{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=hrevolve;Username=postgres;Password=postgres",
    "Redis": "127.0.0.1:6379,connectTimeout=500,syncTimeout=500,abortConnect=false"
  },
  "Jwt": {
    "Key": "your-256-bit-secret-key-here-must-be-at-least-32-characters",
    "Issuer": "https://hrevolve.local",
    "Audience": "https://hrevolve.local",
    "AccessTokenMinutes": 120,
    "RefreshTokenDays": 14
  },
  "AI": {
    "Provider": "Ollama",
    "ApiKey": "",
    "Model": "qwen3:4b",
    "ChatModel": "qwen3:4b",
    "Text2SqlModel": "sqlcoder7b",
    "RouterModel": "qwen3:4b",
    "Ollama": {
      "Endpoint": "http://localhost:11434",
      "ChatModel": "qwen3:4b",
      "Text2SqlModel": "sqlcoder7b",
      "RouterModel": "qwen3:4b"
    }
  },
  "Text2Sql": {
    "Enabled": true,
    "EnableCrud": true,
    "MaxJoinTables": 5,
    "MaxFilters": 20,
    "MaxResultRows": 1000,
    "DefaultResultRows": 100,
    "QueryTimeoutSeconds": 30,
    "EnableQueryCache": true,
    "CacheDurationMinutes": 5,
    "MaxComplexityScore": 50,
    "AllowedEntities": [
      "Employee",
      "AttendanceRecord",
      "LeaveRequest",
      "LeaveBalance",
      "LeaveType",
      "PayrollRecord",
      "OrganizationUnit",
      "Position"
    ],
    "BlockedKeywords": [
      "exec",
      "execute",
      "xp_",
      "sp_",
      "sys.",
      "information_schema",
      "--",
      "/*",
      "*/",
      ";--",
      "drop",
      "truncate",
      "alter"
    ],
    "SensitiveFields": {
      "Employee": ["IdCardNumber", "PersonalEmail"],
      "PayrollRecord": ["*"],
      "Position": ["SalaryRangeMin", "SalaryRangeMax"]
    },
    "CrudPermissions": {
      "Insert": "hr:write",
      "Update": "hr:write",
      "Delete": "hr:admin"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/hrevolve-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*"
}
